<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradation"
    tools:context="com.lunacoding.stellar.MainActivity">
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="120dp"
	    android:gravity="center"
	    android:orientation="vertical">
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="20dp"
		    android:text="─────　　방금 찾은 물건　　─────"
		    android:textColor="#FFFF"
		    android:textSize="15dp"/>
		
		<TextView
		    android:id="@+id/obj1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp"
		    android:text=""
		    android:textColor="#FFFF"
		    android:textSize="40dp"/>
		
		<TextView
		    android:id="@+id/obj2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp"
		    android:text=""
		    android:textColor="#AFFF"
		    android:textSize="37dp"/>
		
		<TextView
		    android:id="@+id/obj3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp"
		    android:text=""
		    android:textColor="#6FFF"
		    android:textSize="34dp"/>
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/serchui"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="550dp"
	    android:alpha="0"
	    android:gravity="center"
	    android:orientation="vertical">
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="20dp"
		    android:text="─────　　검색중　　─────"
		    android:textColor="#FFFF"
		    android:textSize="15dp"/>
		
		<TextView
		    android:id="@+id/search"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp"
		    android:text="드라이기가 어딨더라"
		    android:textColor="#FFFF"
		    android:textSize="30dp"/>
	</LinearLayout>
	
	
	<TextView
	    android:id="@+id/alert"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="400dp"
	    android:alpha="0"
	    android:background="#3000"
	    android:gravity="center"
	    android:padding="10dp"
	    android:text="찾을 수 없습니다."
	    android:textColor="#FFFF"
	    android:textSize="30dp"/>
	
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:alpha="0">
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
			
			<TextView
			    android:id="@+id/log"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>
	
	
	<View
	    android:id="@+id/back"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:alpha="0"
	    android:background="#a000"/>
	
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="20dp">
		
		<ImageView
		    android:id="@+id/status_3_listning"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:background="@drawable/status_3_listning"/>
		
		<ImageView
		    android:id="@+id/status_2_start"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:background="@drawable/status_2_start"/>
		
		<ImageView
		    android:id="@+id/status_1_waiting"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:background="@drawable/status_1_waiting"/>
	</RelativeLayout>
	
	<View
	    android:id="@+id/button"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"/>

</RelativeLayout>
